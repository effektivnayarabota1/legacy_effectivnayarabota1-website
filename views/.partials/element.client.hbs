<div id="{{this.id}}" class="element-container client dynamic_element">
  <div class="element_abs-container">
    <div class="element_text-container mono">
      <h1><a href="admin/{{this.id}}">{{this.title}}</a></h1>
	  {{#if this.text}}
      	<p>{{this.text}}</p>
	  {{/if}}
    </div>

	{{#if @partial-block}}
    	<div class="element_control-container" style="background-color: {{this.color.current}};">
			{{> @partial-block }}
    	</div>
	{{/if}}
  </div>

  <div
    id="{{this.id}}"
    class="element_img-container border dynamic_preview-container"
	style="border-color: {{this.color.current}}; object-fit: {{this.objectFit}}"
  >
	{{> (image . 'thumbnail')}}
  </div>
</div>
