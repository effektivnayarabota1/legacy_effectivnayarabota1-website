<form
	{{#if item.title}}
	action="/admin/update-page/{{item.slug}}"
	{{else}}
			action="/admin/create-page"
	{{/if}}
	method="POST"
	enctype="multipart/form-data"
	id="form"
>

		<fieldset id="fieldset" >
		<legend>meta</legend>
		<label for="title">title</label>
		<input
			type="text"
			name="title"
			placeholder="title"
			{{#if item.title}}
			value={{preview item.title}}
			{{/if}}
			required
		/>

		<br><br>

		<label for="desc">desc</label>
		<textarea
			name="desc"
			form="createForm"
			placeholder="desc"
			/* required */
		>{{#if item.desc}}{{preview item.desc}}{{/if}}</textarea>

		<br><br>

		<label for="cover">cover</label>
		<input 
		type="file" 
		name="cover" 
		accept="image/*"
		{{#unless item.img}}
		required
		{{/unless}} 
		/>
		{{#if item.img}}
		<img src={{base64 item.img}} alt="" />
		{{/if}}
	</fieldset>

	<hr>

	<div>
		<a href="constructor/image">Изображение</a>
		<a href="constructor/text">Текст</a>
		<a href="constructor/gallery">Галлерея</a>
	<!-- <button id="imageButton">Изображение</button> -->
	<!-- <button id="textButton" >Текст</button> -->
	<!-- <button id="galleryButton" >Галлерея</button> -->
	</div>

	<hr>

	<input type="submit" value="Сохранить" />
	<input type="submit" value="Удалить" />

</form>
<script src="/script/admin_constructor.js" ></script>
